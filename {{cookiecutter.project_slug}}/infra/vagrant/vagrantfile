Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"

  config.vm.network "private_network", ip: "{{cookiecutter.vm_ip}}"

  config.vm.provider "virtualbox" do |vb|
    vb.memory = {{cookiecutter.vm_memory}}
    vb.cpus   = {{cookiecutter.vm_cpus}}
  end

  
  config.vm.synced_folder "../..", "/srv/{{cookiecutter.project_slug}}"
end
